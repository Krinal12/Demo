<html>
  <body>
    <div class="container">
      <h1>Customer</h1>
      <table border=1 class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
          <tr>
            <td><%= @customer.name%></td>
            <td><%= @customer.description%></td>
            <td><%= link_to "Edit" , edit_customer_path(@customer)%></td>
            <td><%= button_to "delete", {:controller => :customers,
                  :action => 'destroy', :id => @customer.id ,  }, :method => :delete , class: "btn btn-danger mx-1" %>
            </td>
          </tr>
        </thead>
      </table>
        <div>
          <h1>Reviews</h1>
          <%= render @customer.reviews%>
        </div>
        <%= render 'reviews/form'%>
    </div>
  </body>
</html>

 <%= form_with model: @customer ,  html: { 'data-turbo': false }  do |f| %>
  <div class="form-outline mb-4">
    <%= f.label 'Name', class: "form-label"%>
    <%= f.text_field :name, class: "form-control form-control-lg" %>
    <% @customer.errors.full_messages_for(:name).each  do |msg| %>
    <%= msg %>
    <%end%>
  </div>
  <div>
    <%= f.label 'description', class:"form-label"%>
    <%= f.text_area :description, class: "form-control form-control-lg" %>
    <% @customer.errors.full_messages_for(:description).each  do |msg| %>
    <%= msg %>
    <%end%>
  </div><br>
  <div>
      <%# <%= f.text_field 'email', class:"form-label"%> 

    </div>
  <div class="d-flex justify-content-center">
    <%= f.submit class:"btn btn-success btn-block btn-lg gradient-custom-4 text-body"%>
  </div>
<%end%>